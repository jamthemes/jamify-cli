{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node-dev",
      "args": [
        "--inspect",
        "--watch",
        "src/**/*.ts",
        "--respawn",
        "src/index.ts"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "restart": true
    }
  ]
}
